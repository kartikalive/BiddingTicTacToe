<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindsortlabs.biddingtictactoe.StartActivity"
    android:background="@drawable/bg_basic">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_bidding_game"
        android:id="@+id/btn_bidding_game"
        android:baselineAlignBottom="false"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bidding"
        android:layout_alignParentTop="false"
        android:id="@+id/btn_bidding"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:onClick="onClick"
        android:visibility="gone"/>


    <Button
        android:layout_width="wrap_content"
        android:text="Primitive Game"
        android:layout_alignParentTop="false"
        android:id="@+id/btn_primitive_game"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:visibility="visible"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_custom_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Custom Play"
        android:visibility="visible"
        android:layout_gravity="center_horizontal" />


    <Button
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Instruction"
        android:onClick="onClick"
        />

    <Button
        android:text="Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/settings_btn"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:visibility="visible" />

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:visibility="gone" />

</LinearLayout>
