<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_basic"
    tools:context="com.mindsortlabs.biddingtictactoe.SettingsActivity">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/MyCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:elevation="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_basic">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/close_black"
                android:onClick="onClose"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OPTIONS"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/tv_settings"
                android:textSize="32sp"
                android:textColor="@android:color/white" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                >

                <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:id="@+id/animated_play_btn"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/sound_toggle_btn"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:text="Drawing Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/animate_title"
                    android:textSize="24sp"
                    android:textColor="#DDD"
                    android:layout_below="@+id/sound_title"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp" />

                <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="58dp"
                    android:id="@+id/sound_toggle_btn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:text="Sound Effects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sound_title"
                    android:textSize="24sp"
                    android:textColor="#DDD"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="65dp" />

                <TextView
                    android:text="This feature is supported in phones with Marshmallow(6.0) or above.(only in Primitive game - Two players)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/animate_title"
                    android:layout_marginTop="30dp"
                    android:id="@+id/tv_note"
                    android:textSize="16sp"
                    android:layout_marginLeft="30dp"
                    android:visibility="visible"
                    android:layout_centerHorizontal="false" />

                <ImageButton
                    android:id="@+id/btn_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/btn_tutorial"/>
                    <!--card_view:srcCompat="@drawable/btn_tutorial" />-->

            </RelativeLayout>



        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
