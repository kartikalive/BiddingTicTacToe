<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.mindsortlabs.biddingtictactoe.ChooseBiddingAndAds"
android:background="@drawable/bg_splash">


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    style="@style/MyCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:elevation="10dp"
    card_view:cardCornerRadius="4dp"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/bg_basic">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"

            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="BIDDING OPTIONS"
            android:textSize="28sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:typeface="normal" />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="LEVEL"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="28dp"
                android:textColor="@color/holo_white2" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="MY TOTAL COINS"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:textColor="@color/holo_white2"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="CPU TOTAL COINS"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:textColor="@color/holo_white2"
                />

        </LinearLayout>





        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/linearLayout2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="100"
                android:gravity="center_horizontal"
                android:textSize="36dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/holo_white2"
                />


            <TextView
                android:id="@+id/CpuBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="100"
                android:gravity="center_horizontal"
                android:textSize="36dp"
                android:textColor="@color/holo_white2"
                />

        </LinearLayout>













        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            >

            <Button
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:text="Watch Video tO INCREASE YOUR COINS"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1.0"
                />

            <ImageButton
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:onClick="startBiddingPlay"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/img_start" />
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>



</LinearLayout>